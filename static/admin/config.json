{
	"$schema": "https://unpkg.com/@sveltia/cms@0.106.3/schema/sveltia-cms.json",
	"backend": {
		"name": "github",
		"repo": "tomatrow/triathacore",
		"base_url": "https://sveltia-cms-auth.tomatrow.workers.dev"
	},
	"media_folder": "static/media",
	"public_folder": "/media",
	"media_libraries": {
		"stock_assets": { "providers": [] },
		"default": {
			"config": {
				"transformations": {
					"raster_image": { "format": "webp", "quality": 85, "width": 2048, "height": 2048 },
					"svg": { "optimize": true }
				}
			}
		}
	},
	"singletons": [
		{
			"name": "general",
			"label": "General",
			"file": "src/lib/cms_data/general.json",
			"fields": []
		},
		{
			"name": "header",
			"label": "Header",
			"file": "src/lib/cms_data/header.json",
			"fields": [
				{
					"name": "navItems",
					"label": "Nav Items",
					"widget": "list",
					"fields": [
						{ "name": "label", "widget": "string" },
						{ "name": "link", "widget": "string" },
						{
							"name": "style",
							"widget": "select",
							"options": [
								{ "label": "Plain", "value": "plain" },
								{ "label": "Button", "value": "button" }
							]
						}
					]
				}
			]
		},
		{
			"name": "hero-section",
			"label": "Hero Section",
			"file": "src/lib/cms_data/hero-section.json",
			"fields": [
				{ "name": "title", "widget": "text" },
				{ "name": "subtitle", "widget": "text" },
				{ "name": "image", "widget": "image" },
				{ "name": "imageSubtext", "widget": "text" }
			]
		},
		{
			"name": "vision-section",
			"label": "Vision Section",
			"file": "src/lib/cms_data/vision-section.json",
			"fields": [
				{ "name": "subtitle", "widget": "string" },
				{ "name": "title", "widget": "text" },
				{ "name": "text", "widget": "text" },
				{ "name": "image", "widget": "image" }
			]
		},
		{
			"name": "impact-section",
			"label": "Impact Section",
			"file": "src/lib/cms_data/impact-section.json",
			"fields": [
				{ "name": "subtitle", "widget": "string" },
				{ "name": "title", "widget": "text" },
				{ "name": "text", "widget": "text" },
				{ "name": "bulletOne", "widget": "text" },
				{ "name": "bulletTwo", "widget": "text" },
				{ "name": "bulletThree", "widget": "text" },
				{ "name": "image", "widget": "image" }
			]
		},
		{
			"name": "invitation-section",
			"label": "Invitation Section",
			"file": "src/lib/cms_data/invitation-section.json",
			"fields": [
				{ "name": "eventsSubtitle", "widget": "string" },
				{ "name": "eventsTitle", "widget": "string" },
				{ "name": "eventsText", "widget": "text" },
				{ "name": "eventsButtonText", "widget": "string" },
				{ "name": "eventsButtonLink", "widget": "string" },
				{ "name": "partnerTitle", "widget": "string" },
				{ "name": "partnerText", "widget": "text" },
				{ "name": "leftPartnerButtonText", "widget": "string" },
				{ "name": "leftPartnerButtonLink", "widget": "string" },
				{ "name": "rightPartnerButtonText", "widget": "string" },
				{ "name": "rightPartnerButtonLink", "widget": "string" }
			]
		},
		{
			"name": "image-grid-section",
			"label": "Community Image Grid Section",
			"file": "src/lib/cms_data/image-grid-section.json",
			"fields": [
				{ "name": "title", "widget": "text" },
				{ "name": "subtitle", "widget": "text" },
				{ "name": "images", "widget": "list", "fields": [{ "name": "image", "widget": "image" }] }
			]
		},
		{
			"name": "sponsors-section",
			"label": "Sponsors Section",
			"file": "src/lib/cms_data/sponsors-section.json",
			"fields": [
				{ "name": "title", "widget": "string" },
				{
					"name": "images",
					"widget": "list",
					"fields": [
						{ "name": "link", "widget": "string" },
						{ "name": "image", "widget": "image" }
					]
				}
			]
		},
		{
			"name": "footer",
			"label": "Footer",
			"file": "src/lib/cms_data/footer.json",
			"fields": [
				{
					"name": "navItems",
					"label": "Nav Items",
					"widget": "list",
					"fields": [
						{ "name": "label", "widget": "string" },
						{ "name": "link", "widget": "string" }
					]
				}
			]
		}
	]
}
